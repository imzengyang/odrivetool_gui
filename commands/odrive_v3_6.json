    {
      "key": "odrv0.axis{axis}.requested_state",
      "name": "设置轴状态",
      "template": "w axis{axis}.requested_state {state}",
      "description": "设置轴的请求状态",
      "category": "轴控制",
      "params": [
        {
          "name": "axis",
          "required": true,
          "default": 0,
          "options": [
            { "value": "0", "label": "轴0" },
            { "value": "1", "label": "轴1" }
          ]
        },
        {
          "name": "state",
          "required": true,
          "options": [
            { "value": "1", "label": "1 - IDLE (空闲)" },
            { "value": "2", "label": "2 - STARTUP_SEQUENCE (启动序列)" },
            { "value": "3", "label": "3 - FULL_CALIBRATION_SEQUENCE (完整校准)" },
            { "value": "4", "label": "4 - MOTOR_CALIBRATION (电机校准)" },
            { "value": "5", "label": "5 - SENSORLESS_CONTROL (无感控制)" },
            { "value": "6", "label": "6 - ENCODER_INDEX_SEARCH (编码器索引搜索)" },
            { "value": "7", "label": "7 - ENCODER_OFFSET_CALIBRATION (编码器偏移校准)" },
            { "value": "8", "label": "8 - CLOSED_LOOP_CONTROL (闭环控制)" }
          ]
        }
      ]
    },
    {
      "key": "position_control_q",
      "name": "位置控制(限制模式)",
      "template": "q {axis} {pos} {vel_lim} {torque_lim}",
      "description": "位置控制命令，速度和力矩为限制值。推荐用于一次发送一个设定点的基本应用",
      "category": "运动控制",
      "params": [
        {
          "name": "axis",
          "required": true,
          "default": 0,
          "options": [
            { "value": "0", "label": "轴0" },
            { "value": "1", "label": "轴1" }
          ]
        },
        { "name": "pos", "required": true, "placeholder": "位置(圈数)" },
        { "name": "vel_lim", "required": true, "placeholder": "速度限制(圈/秒)" },
        { "name": "torque_lim", "required": true, "placeholder": "力矩限制(Nm)" }
      ]
    },
    {
      "key": "position_control_p",
