{
  "name": "odrivegui",
  "version": "1.0.0",
  "description": "ODrive Control Desktop Application",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "npm run build && electron dist/main/main.js",
    "dev:watch": "concurrently \"npm run dev:renderer:watch\" \"npm run dev:main:watch\"",
    "dev:renderer": "vite build",
    "dev:renderer:watch": "vite build --watch",
    "dev:main": "tsc -p tsconfig.main.json && electron dist/main/main.js",
    "dev:main:watch": "tsc -p tsconfig.main.json --watch",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "odrive",
    "electron",
    "react",
    "typescript"
  ],
  "author": "ODrive GUI Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.6.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.0",
    "vite-plugin-electron": "^0.14.0"
  },
  "dependencies": {
    "@serialport/parser-readline": "^12.0.0",
    "autoprefixer": "^10.4.0",
    "chart.js": "^4.3.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.544.0",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-flow-renderer": "^10.3.17",
    "react-router-dom": "^6.14.0",
    "serialport": "^12.0.0",
    "tailwindcss": "^3.3.0",
    "uuid": "^9.0.0"
  },
  "build": {
    "appId": "com.odrive.gui",
    "productName": "ODrive GUI",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
